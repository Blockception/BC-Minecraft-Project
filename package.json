  "files": [
    "lib/src/**/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.17",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.6.1",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.0",
    "typescript": "^4.1.5"
  }
